<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.bigdj.emergetransaction.SimpleTransactionActivity"
              tools:showIn="@layout/make_transaction_main_simple">

    <TextView
        android:textColor="#000"
        android:textSize="24sp"
        android:text="Type your name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="4dp"
        android:hint="Type your name in this box:"
        android:textSize="24sp"
        android:text="Visa Inc."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="48dp"
        android:textColor="#000"
        android:textSize="24sp"
        android:text="Type your card number:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="4dp"
        android:hint="Type your card number in this box:"
        android:textSize="24sp"
        android:text="4895142232120006"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
