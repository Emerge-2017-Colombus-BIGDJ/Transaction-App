<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.bigdj.emergetransaction.TransactionActivitySimple" >

    <TextView
        android:textColor="#000"
        android:textSize="24sp"
        android:text="Type your state:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="4dp"
        android:hint="Type your state here:"
        android:textSize="24sp"
        android:text="Florida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="32dp"
        android:textColor="#000"
        android:textSize="24sp"
        android:text="Type your street address:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="4dp"
        android:hint="Type your street address here:"
        android:textSize="24sp"
        android:text="400 NW 26th St"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="32dp"
        android:textColor="#000"
        android:textSize="24sp"
        android:text="Type your zip code:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="4dp"
        android:hint="Type your zip code here:"
        android:textSize="24sp"
        android:text="33127"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
