<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <Button
        android:id="@+id/choice_3_button"
        android:layout_width="474dp"
        android:layout_height="127dp"
        android:onClick="choice3"
        android:text="Choice 3"
        android:textSize="75sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="476dp" />

    <Button
        android:id="@+id/choice_next_button"
        android:layout_width="638dp"
        android:layout_height="122dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="705dp"
        android:background="@android:color/holo_green_light"
        android:onClick="next_choices"
        android:text="NEXT"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/chocie_skip_button"
        android:layout_width="224dp"
        android:layout_height="66dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="skip_choices"
        android:text="Hard? Click here to skip!"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="371dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/choice_1_button"
        android:layout_width="474dp"
        android:layout_height="127dp"
        android:onClick="choice1"
        android:text="Choice 1"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/choice_2_button"
        android:layout_width="471dp"
        android:layout_height="127dp"
        android:onClick="choice2"
        android:text="Choice 2"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="469dp"
        android:layout_height="96dp"
        android:text="WHICH TEXT BELOW COMFORTABLE TO READ?"
        android:textAlignment="center"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="106dp" />

</android.support.constraint.ConstraintLayout>